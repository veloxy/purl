{% extends 'AppBundle::layout.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Purl.</h1>
            <p class="lead">Purl (Petite URL) is an open source project with the goal of<br> providing you with your own private URL shortener!</p>
            <div class="form-home">
                {% if link.id %}
                    <div class="form-group">
                        <label class="sr-only" for="url">URL to shorten</label>
                        <input type="url" id="js-url" class="input-lg form-control" value="{{ app.request.schemeAndHttpHost ~ '/' ~ link.code }}">
                    </div>
                    <button type="button" data-clipboard-target="#js-url" class="btn btn-primary btn-lg">Copy</button>
                {% else %}
                    {{ form_start(form) }}
                    <div class="form-group">
                        <label class="sr-only" for="url">URL to shorten</label>
                        {{ form_widget(form.url, {'attr': {'class': 'input-lg', 'placeholder': 'http(s)://example.com'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">Shorten URL</button>
                    {{ form_end(form) }}
                {% endif %}
            </div>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}